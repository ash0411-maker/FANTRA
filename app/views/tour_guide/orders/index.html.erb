<h2>予約ステータスを変更しましょう！</h2>
<div class = "container">
	<div class = "row">
		<div class = "col-xs-8">
			<div class = "bg-success">
				<h2>現在の予約</h2>
				<table class = "table">
					<%= render 'thead' %>
					<tbody>
						<% @orders.each do |order| %>
							<% if order.status == "ツアー開始前" %>
								<%= render 'tbody', order: order %>
							<% end %>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
		<div class = "col-xs-3">
			<table class = "table table-bordered">
				<tr>
					<th class = "active">
						<h3>総売上</h3>
					</th>
					<th>
						<h3>¥ <%= number_with_delimiter(@order_sales) %></h3>
					</th>
				</tr>
			</table>
		</div>
	</div>

	<div class = "row">
		<div class = "col-xs-8">
			<div class = "bg-info">
				<h2>ツアー前日</h2>
				<table class = "table">
					<%= render 'thead' %>
					<tbody>
						<% @orders.each do |order| %>
							<% if order.status == "ツアー前日" %>
								<%= render 'tbody', order: order %>
							<% end %>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<div class = "row">
		<div class = "col-xs-8">
			<div class = "bg-success">
				<h2>本日のツアー</h2>
				<table class = "table">
					<%= render 'thead' %>
					<tbody>
						<% @orders.each do |order| %>
							<% if order.status == "ツアー当日" %>
								<%= render 'tbody', order: order %>
							<% end %>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>



	<div class = "row">
		<div class = "col-xs-8">
			<div class = "bg-info">
				<h2>ツアー中</h2>
				<table class = "table">
					<%= render 'thead' %>
					<tbody>
						<% @orders.each do |order| %>
							<% if order.status == "ツアー中" %>
								<%= render 'tbody', order: order %>
							<% end %>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>



	<div class = "row">
		<div class = "col-xs-8">
			<div class = "bg-success">
				<h2>終了済みツアー</h2>
				<table class = "table">
					<%= render 'thead' %>
					<tbody>
						<% @orders.each do |order| %>
							<% if order.status == "ツアー終了" %>
								<%= render 'tbody', order: order %>
							<% end %>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>



