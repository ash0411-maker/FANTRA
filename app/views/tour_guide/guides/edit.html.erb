<h1>ツアーガイド詳細</h1>
<h1>自撮りの写真エラー出る</h1>
<div class = "container">
	<div class = "row">
		<%= form_with(model: @guide, url: tour_guide_guide_path(@guide)) do |f| %>

		    <div class = "col-xs-9 col-xs-offset-3">
		    	<div class = "row">
		        	<div class = "col-xs-3">
		        	  <%= f.label :姓 %>
		        	  <%= f.text_field :family_name %><br/>
		        	  <%= f.label :名 %>
		        	  <%= f.text_field :name %>
		        	</div>
		        	<div class = "col-xs-3">
		        	  <%= f.label :国籍 %>
		        	  <%= f.text_field :nationality %><br/>
		        	</div>
		    	</div>

		    	 <div class = "row">
		    	 	<div class = "col-xs-3">
		    	 		<%= f.label :郵便番号 %><br/>
		        	  	<%= f.text_field :postal_code %>
		    	 	</div>
		    	 	<div class = "col-xs-3">
		    	 		<%= f.label :住所 %><br/>
		        	  	<%= f.text_field :address %>
		    	 	</div>
		    	 </div>
		    	 <div class = "row">
		    	 	<div class = "col-xs-3">
		    	 		<%= f.label :電話番号 %><br/>
		        	  	<%= f.text_field :phone_number %>
		    	 	</div>
		    	 	<div class = "col-xs-3">
		    	 		<%= f.label :メールアドレス %><br/>
		        	  	<%= f.text_field :email %>
		    	 	</div>
		    	 </div>
		    	 <div class = "row">
		    	 	<div class = "col-xs-3">
		    	 		<%= f.label :身分証明書 %><br/>
		        	  	<%= f.attachment_field :identification_image %>
		    	 	</div>
		    	 	<div class = "col-xs-3">
		    	 		<%= f.label :自己紹介 %><br/>
		        	  	<%= f.text_area :introduction %>
		    	 	</div>
		    	 </div>
		    </div>
		    <div class = "row">
		    	<div class = "col-xs-9 col-xs-offset-3">
		    		<%= f.submit  "編集", class: "btn btn-success" %>
		    	</div>
		    </div>
		<% end %>
	</div>
</div>

