<h1>ツアーガイド詳細</h1>
<div class = "container">
	<%= form_with(model: @guide, url: tour_guide_guide_path(@guide)) do |f| %>
		<div class = "row">
		    <div class = "col-xs-11">

		    <!---- エラーメッセージ ---->
		    	<% if @guide.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= @guide.errors.count %>件のエラーが発生しました。</h2>
				      <ul>
				      <% @guide.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
				      <% end %>
				      </ul>
				    </div>
			    <% end %>
			<!---- エラーメッセージ ---->

			    <table class = "table table-bordered">

			    <!-- 氏名 -->
			      <tr class = "text-center">
			        <td class = "active">お名前</td>
			        <td>
			          <%= f.label :姓 %><br/><%= f.text_field :family_name %>
			        </td>
			        <td>
			          <%= f.label :名 %><br/><%= f.text_field :name %>
			        </td>
			        <td>
			          <%= f.label :国籍 %><br/><%= f.text_field :nationality %>
			        </td>
			      </tr>
			    <!-- 氏名 -->

			    <!-- 住所 -->
			      <tr class = "text-center">
			        <td class = "active">住所</td>
			        <td>
			          <%= f.label :郵便番号 %><br/><%= f.text_field :postal_code %>
			        </td>
			        <td>
			          <%= f.label :住所 %><br/><%= f.text_field :address %>
			        </td>
			      </tr>
			    <!-- 住所 -->


			    <!-- 電話番号、メアド -->
			      <tr class = "text-center">
			        <td class = "active">住所</td>
			        <td>
			          <%= f.label :電話番号 %><br/><%= f.text_field :phone_number %>
			        </td>
			        <td>
			          <%= f.label :メールアドレス %><br/><%= f.text_field :email %>
			        </td>
			      </tr>
			    <!-- 電話番号、メアド -->



			    <!-- 国籍・身分証明書 -->
			      <tr class = "text-center">
			        <td class = "active">プロフィール写真。身分証明書</td>
			        <td>
			          <%= f.label :あなたが写っている写真 %><br/><%= f.attachment_field :selfy_image %>
			        </td>
			        <td>
			          <%= f.label :身分証明書 %><br/><%= f.attachment_field :identification_image %>
			        </td>
			      </tr>
			    <!-- 国籍・身分証明書 -->

			    </table>
			</div>
		</div>
	<!-- 自己紹介 -->
		<div class = "row">
			<div class = "col-xs-8">
			    <div class =  "panel panel-default">
			      <div class="panel-heading text-center">
			        <h3 class="panel-title">自己紹介(250文字以内)</h3>
			      </div>
			      <div class = "panel-body" >
			        <%= f.text_area :introduction, class: "guide-introduction-area" %>
			      </div>
			    </div>
			</div>
			<div class = "col-xs-3">
	    		<%= f.submit  "編集", class: "btn btn-success btn-lg" %>
	    	</div>
		</div>
	<!-- 自己紹介 -->


	    <div class = "row">
	    	<div class = "col-xs-3">
				<%= link_to "退会手続きへ", tour_guide_guide_guide_delete_path(current_guide), class: "btn btn-danger delete-btn btn-xs" %>
			</div>
	    </div>


	<% end %>
</div>


