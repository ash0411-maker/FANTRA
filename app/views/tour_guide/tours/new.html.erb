<div class = "container">
	<div class = "row">
		<h1>ツアー新規投稿</h1>
		<div>
			<%= form_for(@tour, url: tour_guide_tours_new_path) do |f| %>


		        <div class = "col-xs-4">
		          <div class = "form_field">
		            <%= f.label :ツアーの題名 %><br/>
		            <%= f.text_field :title %>
		          </div>

		          <div class = "form_field">
		            <%= f.label :ツアー説明 %><br/>
		            <%= f.text_area :introduction %>
		          </div>

		          <div class = "form_field">
		            <%= f.label :ジャンル %><br/>
		            <%= f.collection_select :genre_id, @genres, :id, :name, :prompt => "--ジャンル--" %>
		          </div>

		          <div class = "form_field">
		            <%= f.label :案内する都市 %><br/>
		            <%= f.collection_select :city_id, @cities, :id, :name, :prompt => "--都市名--" %>
		          </div>

		          <div class = "form_field">
		            <%= f.label :ツア一１人あたりの価格 %><br/>
		            <%= f.text_field :price %>円
		          </div>

		          <div class = "form_field">
		            <%= f.label :定員 %><br/>
		            <%= f.text_field :capacity %>円
		          </div>

		          <div class = "form_field">
		            <%= f.label :販売ステータス %><br/>
		            <%= f.select :is_active,[["売切れ", "false"], ["販売中", "true"]]  %>
		          </div>

		          <div class = "form_field">
		            <%= f.submit  "メニュー追加", class: "btn btn-success" %>
		          </div>
		        </div>

		    <% end %>
		</div>
	</div>
</div>
