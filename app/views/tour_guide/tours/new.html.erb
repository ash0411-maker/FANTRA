<div class = "container">
	<div class = "row">
		<h1>ツアー新規投稿</h1>
		<div>
			<%= form_with(model: @tour, url: tour_guide_tours_path) do |f| %>
		        <div class = "col-xs-9 col-xs-offset-3">
		        	<div class = "row">
			        	<div class = "form_field col-xs-3">
			        	  <%= f.label :ツアーの題名 %><br/>
			        	  <%= f.text_field :title %>
			        	</div>

			        	<div class = "form_field col-xs-3">
			        	  <%= f.label :ジャンル %><br/>
			        	  <%= f.collection_select :genre_id, @genres, :id, :name, :prompt => "--ジャンル--" %>
			        	</div>

			        	<div class = "form_field col-xs-3">
			        	  <%= f.label :案内する都市 %><br/>
			        	  <%= f.collection_select :city_id, City.all, :id, :name, :prompt => "--都市名--" %>
			        	</div>
			        </div>
			        <div class = "row">
				        <div class = "form_field col-xs-6">
				          <%= f.label :ツアー説明 %><br/>
				          <%= f.text_area :body, class: "tour-body" %>
				        </div>

				        <div class = "col-xs-4">
				        	<div class = "right-bar">
						    	<div class = "form_field">
						    	  <%= f.label :定員 %><br/>
						    	  <%= f.text_field :capacity %>人
						    	</div>

						    	<div class = "form_field">
						    	  <%= f.label :所要時間 %><br/>
						    	  <%= f.text_field :time, placeholder: "4時間、2日など" %>
						    	</div>

						    	<div class = "form_field">
						    	  <%= f.label :ツア一１人あたりの価格 %><br/>
						    	  <%= f.text_field :price %>円
						    	</div>

						    	<div class = "form_field">
						    	  <%= f.label :価格に含まれるサービス %><br/>
						    	  <%= f.text_area :contents_of_price, class: "contents_of_price", placeholder: "移動費、食費、入場料等" %>
						    	</div>
						    </div>
					    </div>
			        </div>

		        	<div class = "form_field">
		        	  <%= f.label :販売ステータス %><br/>
		        	  <%= f.select :is_active,[["販売中", "true"], ["販売停止", "false"]]  %>
		        	</div>

		        <!----- jQuery ----->
		        	<!-- <script>
						$(function() {
					        $(".photo-btn").click(function() {
					          $("#tour-photo-field").append("<%= f.attachment_field :tour_photos_images %>");
					        });
					      });
					</script> -->

		        <!----- 写真複数枚投稿 ----->
		        	<div class = "row">
		        		<div class = "col-xs-4">
				        	<div id = "form_field">
					        	<%= f.label :ツアー写真 %><br />
								<%= f.attachment_field :tour_photos_images %>
							</div>
						</div>
						<div class = "col-xs-4">
				        	<div id = "form_field">
					        	<%= f.label :ツアー写真 %><br />
								<%= f.attachment_field :tour_photos_images %>
							</div>
						</div>
					</div>

					<div class = "row">
						<div class = "col-xs-4">
				        	<div id = "form_field">
					        	<%= f.label :ツアー写真 %><br />
								<%= f.attachment_field :tour_photos_images %>
							</div>
						</div>
						<div class = "col-xs-4">
				        	<div id = "form_field">
					        	<%= f.label :ツアー写真 %><br />
								<%= f.attachment_field :tour_photos_images %>
							</div>
						</div>
					</div>

					<div class = "row">
						<div class = "col-xs-4">
				        	<div id = "form_field">
					        	<%= f.label :ツアー写真 %><br />
								<%= f.attachment_field :tour_photos_images %>
							</div>
						</div>
						<div class = "col-xs-4">
				        	<div id = "form_field">
					        	<%= f.label :ツアー写真 %><br />
								<%= f.attachment_field :tour_photos_images %>
							</div>
						</div>
					</div>
				<!----- 写真追加ボタン ----->

		        	<div class = "form_field">
		        	  <%= f.submit  "保存", class: "btn btn-success" %>
		        	</div>
		        </div>
		    <% end %>
		</div>
	</div>
</div>
