<div class = "tour-top-wrapper">

<!----- ツアー写真 ----->
	<div class = "tour-image-wrapper">
		<div class = "container">
			<div class = "row">

				<div class = "col-xs-4">
					<div class = "tour-img-1">
						<%= attachment_image_tag @tour_photos[0], :image, :fill, 380, 350, format: 'jpeg' %>
					</div>
				</div>

				<div class = "col-xs-4">
					<div class = "row">
						<div class = "col-xs-6">
							<div class = "tour-img-2">
								<%= attachment_image_tag @tour_photos[1], :image, :fill, 190, 150, format: 'jpeg' %>
							</div>
						</div>
						<div class = "col-xs-6">
							<div class = "tour-img-3">
								<%= attachment_image_tag @tour_photos[2], :image, :fill, 190, 150, format: 'jpeg' %>
							</div>
						</div>
					</div>
					<div class = "row">
						<div class = "col-xs-12">
							<div class = "tour-img-4">
								<%= attachment_image_tag @tour_photos[3], :image, :fill, 395, 190, format: 'jpeg' %>
							</div>
						</div>
					</div>
				</div>

				<div class = "col-xs-4">
					<div class = "tour-img-5">
						<%= attachment_image_tag @tour_photos[4], :image, :fill, 200, 350, format: 'jpeg' %>
					</div>

				</div>

			</div>
		</div>
	</div>
<!----- ツアー写真 ----->


	<div class = "container">
		<div class = "row">
			<div class = "col-xs-3">
				<div class = "text-left">
					<div class = "left-bar">
						<h1><%= @tour.title %></h1>
						<h4 class = "city-name"><%= @tour.city.name %></h4>
						<h4>ジャンル：<%= @tour.genre.name %></h4>
					</div>
				</div>
			</div>
			<div class = "col-xs-7">
				<div class = "right-bar">
					<table class = "table">
						<thead>
							<th class = "text-center"><h4>案内人</h4></th>
							<th class = "text-center"><h4>定員</h4></th>
							<th class = "text-center"><h4>一人当たりの価格</h4></th>
							<th class = "text-center"><h4>価格に含まれるサービス</h4></th>
							<th class = "text-center"><h4>所要時間</h4></th>
						</thead>
						<tbody class = "text-center">
							<td><h4><%= @tour.guide.name %></h4></td>
							<td><h4><%= @tour.capacity %>人</h4></td>
							<td><h4><%= number_with_delimiter(@tour.price) %>円</h4></td>
							<td><p class = "contents_of_price"><%= @tour.contents_of_price %></p></td>
							<td><h4><%= @tour.time %></h4></td>
						</tbody>
					</table>
				</div>
			</div>
			<div class = "col-xs-2">
				<% if current_guide.id == @tour.guide.id %>
					<%= link_to "編集", edit_tour_guide_tour_path(@tour), class: "btn btn-default btn-lg edit-tour-btn" %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<div class = "guide-tour-body-wrapper">
	<div class = "container">

	<!------- ツアー内容説明 -------->
		<div class = "row">
			<div class = "guide-tour-details">
				<div class = "col-xs-4">
					<div class = "guide-body-title">
						<h2>ツアー内容</h2>
					</div>
				</div>
				<div class = "col-xs-8">
					<h4 class = "guide-body-text"><%= @tour.body %></h4>
				</div>
			</div>
		</div>
	<!------- ツアー内容説明 -------->


	<!------- ツアーガイド紹介 -------->
		<div class = "row">
			<div class = "guide-tour-details">
				<div class = "col-xs-4">
					<div class = "guide-body-title">
						<h2>ガイド紹介</h2>
						<div class = "guide-tour-guide-introduction">
							<%= attachment_image_tag @tour.guide, :selfy_image, :fill, 100, 100, format: 'jpeg' %>
							<h4><strong><%= @tour.guide.family_name %> <%= @tour.guide.name %></strong></h4>
						</div>
					</div>
				</div>
				<div class = "col-xs-8">
					<div class = "tour-body-wrapper">
						<h4 class = "guide-body-text"><%= @tour.guide.introduction %></h4>
					</div>
				</div>
			</div>
		</div>
	<!------- ツアーガイド紹介 -------->

	<!----------- 集合場所 ------------>
		<div class = "row">
			<div class = "guide-tour-details">
				<div class = "col-xs-4">
					<div class = "guide-body-title">
						<h2>集合場所</h2>
					</div>
				</div>
				<div class = "col-xs-8">
					<div class = "tour-body-wrapper">
						<h4 class = "guide-body-text">
							<%= @tour.meetingpoint_address %><br/>
							<%= @tour.meetingpoint_introduction %>
						</h4>

					<!----- GoogleMap ----->
						<%= render '/tourist/tours/google_map', tour: @tour %>
					<!----- GoogleMap ----->

					</div>
				</div>
			</div>
		</div>
	<!----------- 集合場所 ------------>

	</div>
</div>