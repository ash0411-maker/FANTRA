<div class = "container">
	<div class = "row">
		<div class = "col-xs-7 col-xs-offset-1">
			<% if @notifications.count == 0 %>
				<h1>通知はありません</h1>
			<% else %>
				<h1>通知一覧</h1>
				<%= render 'notifications', notifications: @notifications %>
				<%= paginate @notifications, class: "paginate" %>
			<% end %>
		</div>
	</div>
</div>

