
<!----- ツアー写真 ----->
<div class = "tour-image-wrapper">

<!-- ブックマーク -->
	<% if tourist_signed_in? %>
		<span class = "book_mark">
			<div id = "book_marks_<%= @tour.id %>">
				<%= render 'tourist/book_marks/book_mark', tour: @tour %>
			</div>
		</span>
	<% end %>
<!-- ブックマーク -->


	<div class = "container">
		<div class = "row">

			<div class = "col-xs-4">
				<div class = "tour-img-1">
					<%= attachment_image_tag @tour_photos[0], :image, :fill, 380, 350, format: 'jpeg' %>
				</div>
			</div>

			<div class = "col-xs-4">
				<div class = "row">
					<div class = "col-xs-6">
						<div class = "tour-img-2">
							<%= attachment_image_tag @tour_photos[1], :image, :fill, 190, 150, format: 'jpeg' %>
						</div>
					</div>
					<div class = "col-xs-6">
						<div class = "tour-img-3">
							<%= attachment_image_tag @tour_photos[2], :image, :fill, 190, 150, format: 'jpeg' %>
						</div>
					</div>
				</div>
				<div class = "row">
					<div class = "col-xs-12">
						<div class = "tour-img-4">
							<%= attachment_image_tag @tour_photos[3], :image, :fill, 395, 190, format: 'jpeg' %>
						</div>
					</div>
				</div>
			</div>

			<div class = "col-xs-4">
				<div class = "tour-img-5">
					<%= attachment_image_tag @tour_photos[4], :image, :fill, 200, 350, format: 'jpeg' %>
				</div>

			</div>

		</div>
	</div>
</div>
<!----- ツアー写真 ----->




<!------- ツアー情報詳細 -------->
<div class = "tour-info-wrapper">
	<div class = "container">
		<div class = "row">
			<div class = "col-xs-3">
				<div class = "text-left">
					<div class = "left-bar">
						<h4><%= @tour.title %></h4>
						<h5 class = "city-name"><%= @tour.city.name %></h5>
						<h5>ジャンル：<%= @tour.genre.name %></h5>
					</div>
				</div>
			</div>
			<div class = "col-xs-7">
				<div class = "right-bar">
					<table class = "table">
						<thead>
							<th class = "text-center"><h5>ガイド</h5></th>
							<th class = "text-center"><h5>定員</h5></th>
							<th class = "text-center"><h5>一人当たりの価格</h5></th>
							<th class = "text-center"><h5>価格に含まれるサービス</h5></th>
							<th class = "text-center"><h5>所要時間</h5></th>
						</thead>
						<tbody class = "text-center">
							<td><h5><%= @tour.guide.name %></h5></td>
							<td><h5><%= @tour.capacity %>人</h5></td>
							<td><h5><%= number_with_delimiter(@tour.price) %>円</h5></td>
							<td><p class = "contents_of_price"><%= @tour.contents_of_price %></p></td>
							<td><h5><%= @tour.time %></h5></td>
						</tbody>
					</table>
				</div>
			</div>
			<div class = "col-xs-2">
				<div class = "order-btn">
					<% if tourist_signed_in? %>
						<%= link_to "予約に進む", new_tourist_tourist_order_path(current_tourist, tour_id: @tour.id), class: "btn btn-success btn-lg"  %>
					<% else %>
						<%= link_to "登録して予約しましょう", new_tourist_registration_path, class: "btn btn-success btn-lg"  %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
<!------- ツアー情報詳細 -------->



<div class = "guide-tour-body-wrapper">
	<div class = "container">

	<!------- ツアー内容説明 -------->
		<div class = "row">
			<div class = "guide-tour-details">
				<div class = "col-xs-4">
					<div class = "guide-body-title">
						<h2>ツアー内容</h2>
					</div>
				</div>
				<div class = "col-xs-8">
					<h4 class = "guide-body-text"><%= @tour.body %></h4>
				</div>
			</div>
		</div>
	<!------- ツアー内容説明 -------->



	<!------- ツアーガイド紹介 -------->
		<div class = "row">
			<div class = "guide-tour-details">
				<div class = "col-xs-4">
					<div class = "guide-body-title">
						<h2>ガイド紹介</h2>
						<div class = "guide-tour-guide-introduction">
						<%= attachment_image_tag @tour.guide, :selfy_image, :fill, 100, 100, format: 'jpeg' %>
						<h4><strong><%= @tour.guide.family_name %> <%= @tour.guide.name %></strong></h4>
					</div>
					</div>

				<!----- チャット機能 ----->
					<div class = "chat-room-btn">
						<% if tourist_signed_in? %>
							<% if @guide_ids.include?(@tour.guide.id) %>
							    <%= link_to "チャットへ", tourist_tourist_room_path(current_tourist, current_tourist.rooms.find_by(guide_id: @tour.guide.id)), class: "btn btn-default" %>
							  <% else %>
							    <%= form_for(Room.new, url: tourist_tourist_rooms_path(current_tourist)) do |f| %>
							      <%= f.hidden_field :guide_id, :value => @tour.guide.id %>
							      <%= f.submit "質問しましょう！", class: "btn btn-default" %>
							    <% end %>
							<% end %>
						<% end %>
					</div>
				<!----- チャット機能 ----->

				</div>
				<div class = "col-xs-8">
					<div class = "tour-body-wrapper">
						<h4 class = "guide-body-text"><%= @tour.guide.introduction %></h4>
					</div>
				</div>
			</div>
		</div>
	<!------- ツアーガイド紹介 -------->


	<!----------- 集合場所 ------------>
		<div class = "row">
			<div class = "guide-tour-details">
				<div class = "col-xs-4">
					<div class = "guide-body-title">
						<h2>集合場所</h2>
					</div>
				</div>
				<div class = "col-xs-8">
					<div class = "tour-body-wrapper">
						<h4 class = "guide-body-text">
							<%= @tour.meetingpoint_address %><br/>
							<%= @tour.meetingpoint_introduction %>
						</h4>

					<!----- GoogleMap ----->
						<%= render 'google_map', tour: @tour %>
					<!----- GoogleMap ----->

					</div>
				</div>
			</div>
		</div>
	<!----------- 集合場所 ------------>


	</div>
</div>



