<div class = "tourist-second-wrapper">
	<div class = "container">
		<div class = "row">

			<div class = "col-xs-4 col-xs-offset-1">
				<h3 class = "tourist-headline">ここから旅を始めましょう</h3>
			</div>

		<!-- ジャンル選択 -->
		    <div class= "col-xs-5 col-xs-offset-2">
				<% @genres.each do |genre| %>
					<%= link_to tourist_tourist_tours_path(current_tourist, genre_id: genre.id), class: "btn btn-default tourist-genre-btn" do %>
						<% genre.name %>
					<% end %>
				<% end %>
			</div>
		<!-- ジャンル選択 -->

		</div>
	</div>
</div>
