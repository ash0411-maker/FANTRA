
<!------ トップ画像 ------>
<div class = "tourist-first-wrapper">
	<span class = "search-city">
		<p><%= flash[:warning] %></p>
	    <%= form_tag(tourist_search_search_path, method: :get) do %>
	      <%= text_field_tag 'search[content]' %>
	      <%= submit_tag '都市名検索', class: "btn btn-primary" %>
	    <% end %>
	</span>
</div>
<!------ トップ画像 ------>

<div class = "tourist-second-wrapper">
	<div class = "container">
		<div class = "row">
			<div class = "col-xs-4 col-xs-offset-1">
				<h3 class = "tourist-headline">ここから旅を始めましょう</h3>
			</div>
		    <div class= "col-xs-5 col-xs-offset-2">
				<% @genres.each do |genre| %>
					<%= link_to tourist_tours_path(genre_id: genre.id), class: "btn btn-default tourist-genre-btn" do %>
						<% genre.name %>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>

<!------ ツアー一覧  --------->
<div class = "container">
	<div class = "row">
		<table class = "table">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @tour_all.each do |tour| %>
					<tr>
						<td><%= tour.title %></td>
						<td>¥ <%= number_with_delimiter(tour.price) %></td>
						<td><%= link_to "詳細", tourist_tour_path(tour), class: "btn btn-default" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<!------ ツアー一覧  --------->







