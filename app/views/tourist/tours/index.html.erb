<div class = "tourist-first-wrapper"></div>
<div class = "tourist-second-wrapper">
	<div class = "container">
		<div class = "row">
			<div class = "col-xs-6 col-xs-offset-1">
				<h3 class = "tourist-headline">素敵な旅を見つけましょう</h3>
			</div>
			<div class = "col-xs-5">
				<% @genres.each do |genre| %>
					<%= link_to tourist_tours_path(genre_id: genre.id), class: "btn btn-default tourist-genre-btn" do %>
						<% genre.name %>
					<% end %>
				<% end %>
			</div>
		</div>

	</div>
</div>
<div class = "container">
	<div class = "row">
		<table class = "table">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @tour_all.each do |tour| %>
					<tr>
						<td><%= tour.title %></td>
						<td><%= tour.price %></td>
						<td><%= link_to "詳細", tourist_tour_path(tour) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>