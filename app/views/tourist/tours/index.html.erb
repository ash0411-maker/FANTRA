
<!------ トップ画像 ------>
<div class = "tourist-first-wrapper">
	<span class = "search-city">
		<p><%= flash[:warning] %></p>
	    <%= form_tag(tourist_search_search_path, method: :get) do %>
	      <%= text_field_tag 'search[content]' %>
	      <%= submit_tag '都市名検索', class: "btn btn-primary" %>
	    <% end %>
	</span>
</div>
<!------ トップ画像 ------>



<!------ ジャンル ------>
<div class = "tourist-second-wrapper">
	<div class = "container">
		<div class = "row">

			<div class = "col-xs-4 col-xs-offset-1">
				<h3 class = "tourist-headline">ここから旅を始めましょう</h3>
			</div>

		<!-- ジャンル選択 -->
		    <div class= "col-xs-5 col-xs-offset-2">
				<% @genres.each do |genre| %>
					<%= link_to tourist_tours_path(genre_id: genre.id), class: "btn btn-default tourist-genre-btn" do %>
						<% genre.name %>
					<% end %>
				<% end %>
			</div>
		<!-- ジャンル選択 -->

		</div>
	</div>
</div>
<!------ ジャンル ------>



<!------ ツアー一覧  --------->
<div class = "container">
	<div class = "row">
		<h2>気になる写真をブックマークしましょう！</h2>
		<%= render 'tour_photos', tours: @tours %>
	</div>
	<%= paginate @tours, class: "paginate" %>
</div>
<!------ ツアー一覧  --------->







