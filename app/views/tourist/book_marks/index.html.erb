<div class = "container">
	<div class = "row">
		<h1>ブックマーク一覧</h1>
		<table class = "table">
			<thead>
				<tr>
					<th>ツアー題名</th>
					<th>定員</th>
					<th>ツアー価格</th>
					<th>所要時間</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @bookmarks.each do |bookmark| %>
					<tr>
						<td><%= bookmark.tour.title %></td>
						<td><%= bookmark.tour.capacity %></td>
						<td><%= bookmark.tour.price %></td>
						<td><%= bookmark.tour.time %></td>
						<th><%= link_to "詳細", tourist_tour_path(bookmark.tour), class: "btn btn-success" %></th>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>