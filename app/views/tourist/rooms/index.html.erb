<% if @rooms.count == 0 %>
	<div class = "container">
		<div class = "row">
			<div class = "col-xs-8 col-xs-offset-1">
				<h2>
					チャットはまだありません。<br/>
					ツアー情報にあるガイド紹介欄から質問をしましょう！
				</h2>
				<span>
					<%= image_tag 'chat_img.png', size: '900x300' %>
				</span>
			</div>
		</div>
	</div>
<% else %>
	<div class = "container">
		<div class = "row">
			<div class = "col-xs-8 col-xs-offset-1">
				<h2>メッセージルーム一覧</h2>
				<table class = "table">
					<thead>
						<tr class = "active">
							<th class = "text-center">チャット相手</th>
							<th class = "text-center">チャットルーム</th>
						</tr>
					</thead>
					<tbody>
						<% @rooms.each do |room| %>
							<tr class = "text-center">
								<td><%= room.guide.family_name %> <%= room.guide.name %>さん</td>
								<td><%= link_to "メッセージ確認", tourist_room_path(room), class: "btn btn-default" %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
<% end %>