<div class = "container">
	<div class = "row">
	<h2>ガイド一覧画面</h2>
	  <div class="col-xs-6">
		<table class = "table">
			<thead>
				<tr class= "active">
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @guides.each do |guide| %>
				<tr>
					<td><%= guide.id %></td>
					<td><%= link_to admin_guide_path(guide) do %><%= guide.family_name %> <%= guide.name %><% end %></td>
					<td><%= guide.email %></td>
					<td></td>
					<td><%= link_to "詳細へ", admin_guide_path(guide), class: "btn btn-default" %></td>
				</tr>
				<%end%>
			</tbody>
		</table>
      </div>
	</div>
</div>
