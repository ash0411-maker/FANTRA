<div class = "container">
	<div class = "row">
	<h2>ガイド一覧画面</h2>
	  <div class="col-xs-6">
		<table class = "table">
			<thead>
				<tr class= "active">
					<th class = "text-center">会員ID</th>
					<th class = "text-center">氏名</th>
					<th class = "text-center">メールアドレス</th>
					<th class = "text-center">ステータス</th>
					<th class = "text-center"></th>
				</tr>
			</thead>
			<tbody>
				<% @guides.each do |guide| %>
				<tr class = "text-center">
					<td><%= guide.id %></td>
					<td><%= guide.family_name %> <%= guide.name %></td>
					<td><%= guide.email %></td>
					<% if guide.deleted_at == nil %>
						<td>有効</td>
					<% else %>
						<td>退会済み</td>
					<% end %>
					<td><%= link_to "詳細へ", admin_guide_path(guide), class: "btn btn-default" %></td>
				</tr>
				<%end%>
			</tbody>
		</table>
      </div>
	</div>
</div>

