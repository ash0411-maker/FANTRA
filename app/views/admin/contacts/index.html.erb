<div class = "container">
	<div class = "row">
		<div class = "col-xs-9 col-xs-offset-1">
			<table class = "table">
				<thead>
					<tr class = "active">
						<th class = "text-center">お問い合わせ番号</th>
						<th class = "text-center">お客様氏名</th>
						<th class = "text-center">メールアドレス</th>
						<th class = "text-center"></th>
					</tr>
				</thead>
				<tbody>
					<% @contacts.each do |contact| %>
						<tr class = "text-center">
							<td><%= contact.id %></td>
							<td><%= contact.name %></td>
							<td><%= contact.email %></td>
							<td><%= link_to "回答する", edit_admin_contact_path(contact, class: "btn btn-sucess") %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>