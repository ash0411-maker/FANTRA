<div class = "container">
	<div class = "row">
	<h2>ツーリスト一覧</h2>
	  	<div class="col-xs-10">
			<table class = "table">
				<thead>
					<tr class= "active">
						<th class = "text-center">会員ID</th>
						<th class = "text-center">登録日（退会日）</th>
						<th class = "text-center">氏名</th>
						<th class = "text-center">性別</th>
						<th class = "text-center">メールアドレス</th>
						<th class = "text-center">会員ステータス</th>
						<th class = "text-center"></th>
					</tr>
				</thead>
				<tbody>
					<% @tourists.each do |tourist| %>
						<% if tourist.deleted_at == nil %>
							<tr class = "text-center">
								<td><%= tourist.id %></td>
								<td><%= tourist.created_at.to_s(:datetime_jp) %></td>
								<td><%= tourist.family_name %> <%= tourist.name %></td>
								<td>
									<% if tourist.sex == "男性" %>
										<i class="fas fa-mars fa-2x"></i>
									<% elsif tourist.sex == "女性" %>
										<i class="fas fa-venus fa-2x"></i>
									<% end %>
								</td>
								<td><%= tourist.email %></td>
								<td>有効</td>
								<td><%= link_to "詳細へ", admin_tourist_path(tourist), class: "btn btn-default" %></td>
							</tr>
						<% else %>

					<!-- 退会しているtourist -->
							<tr class = "text-center admin_tour_deleted_at">
								<td><%= tourist.id %></td>
								<td><%= tourist.deleted_at.to_s(:datetime_jp) %></td>
								<td><%= tourist.family_name %> <%= tourist.name %></td>
								<td>
									<% if tourist.sex == "男性" %>
										<i class="fas fa-mars fa-2x"></i>
									<% elsif tourist.sex == "女性" %>
										<i class="fas fa-venus fa-2x"></i>
									<% end %>
								</td>
								<td><%= tourist.email %></td>
								<td>退会</td>
								<td><%= link_to "詳細へ", admin_tourist_path(tourist), class: "btn btn-default" %></td>
							</tr>
					<!-- 退会しているtourist -->
						<% end %>
					<%end%>
				</tbody>
			</table>
      	</div>
	</div>
</div>


