<div class = "admin-tours-index">

<!----- 検索機能 ----->
	<div class = "admin-search-city">
		<p><%= flash[:warning] %></p>
	    <%= form_tag(admin_search_search_path, method: :get) do %>
	      <%= text_field_tag 'search[content]' %>
	      <%= submit_tag '都市名検索', class: "btn btn-primary" %>
	    <% end %>
	</div>
<!----- 検索機能 ----->


	<div class = "container">
		<div class = "row">
			<h1>管理者用ツアー一覧</h1>
			<div class = "col-xs-2">

		<!----- ジャンル検索 ----->
				<div class =  "panel panel-default category-search-box">
					<div class="panel-heading">
						<h3 class="panel-title">ジャンル検索</h3>
					</div>
					<div class = "panel-body" >
						<% @genres.each do |genre| %>
							<p>
								<%= link_to admin_tours_path(genre_id: genre.id) do %>
									<%= genre.name %>
								<% end %>
							</p>
						<% end %>
					</div>
				</div>
				<div class = "text-center">
					<%= link_to "都市投稿", admin_cities_path, class: "btn btn-success btn-lg" %>
				</div>
				<div class = "text-center admin_genre_btn">
					<%= link_to "ジャンル投稿", admin_genres_path, class: "btn btn-info btn-lg" %>
				</div>
			</div>
		<!----- ジャンル検索 ----->

	<!----- ツアー一覧 ----->
			<div class = "col-xs-10">
				<table class = "table">
					<thead>
						<th class = "active">紹介者</th>
						<th class = "active">ツアー名</th>
						<th class = "active">販売ステータス</th>
						<th class = "active">都市</th>
						<th class = "active">ジャンル</th>
						<th class = "active"></th>
					</thead>
					<% @tours.each do |tour| %>
						<% if tour.is_active == true %>
							<tbody>
								<td><%= tour.guide.name %>さん</td>
								<td><%= tour.title %></td>
								<td>
									<% if tour.is_active == true  %>
										販売中
									<% else %>
										販売停止中
									<% end %>
								</td>
								<td><%= tour.city.name %></td>
								<td><%= tour.genre.name %></td>
								<td><%= link_to "ツアー詳細へ", admin_tour_path(tour), class: "btn btn-default" %></td>
							</tbody>
						<% else %>
							<tbody class = "tour_is_active-tbody">
								<td><%= tour.guide.name %>さん</td>
								<td><%= tour.title %></td>
								<td>
									<% if tour.is_active == true  %>
										販売中
									<% else %>
										販売停止中
									<% end %>
								</td>
								<td><%= tour.city.name %></td>
								<td><%= tour.genre.name %></td>
								<td><%= link_to "ツアー詳細へ", admin_tour_path(tour), class: "btn btn-default" %></td>
							</tbody>
						<% end %>
					<% end %>
				</table>
			</div>
		</div>
	<!----- ツアー一覧 ----->


	</div>
</div>

