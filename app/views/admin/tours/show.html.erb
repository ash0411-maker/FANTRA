<div class = "tour-top-wrapper">

<!----- ツアー写真 ----->
	<div class = "tour-image-wrapper">
		<span class = "guide_book_marks">
		    <i class="fa fa-flag fa-5x" aria-hidden="true" style = "color: red;" ></i>
		    <span class = "guide_book_marks_numbers"><%= @tour.book_marks.count %></span>
		</span>
		<%= render 'tourist/tours/tour_image_wrapper' %>
	</div>
<!----- ツアー写真 ----->



	<div class = "container">
		<div class = "row">
			<div class = "col-xs-3">
				<div class = "text-left">
					<div class = "left-bar">
						<h3><%= @tour.title %></h3>
						<h5 class = "city-name"><%= @tour.city.name %></h5>
						<h5>ジャンル：<%= @tour.genre.name %></h5>
					</div>
				</div>
			</div>
			<div class = "col-xs-7">
				<div class = "right-bar">
					<table class = "table">
						<thead>
							<th class = "text-center"><h4>案内人</h4></th>
							<th class = "text-center"><h4>定員</h4></th>
							<th class = "text-center"><h4>一人当たりの価格</h4></th>
							<th class = "text-center"><h4>価格に含まれるサービス</h4></th>
							<th class = "text-center"><h4>所要時間</h4></th>
						</thead>
						<tbody class = "text-center">
							<td><h4><%= @tour.guide.name %></h4></td>
							<td><h4><%= @tour.capacity %>人</h4></td>
							<td><h4><%= number_with_delimiter(@tour.price) %>円</h4></td>
							<td><p class = "contents_of_price"><%= @tour.contents_of_price %></p></td>
							<td><h4><%= @tour.time %></h4></td>
						</tbody>
					</table>
				</div>
			</div>
			<div class = "col-xs-2">
				<%= form_for(@tour, url: admin_tour_path(@tour)) do |f| %>
					<% if @tour.is_active == true %>
						<span class="col-xs-3">
							<%= f.radio_button :is_active, true , checked: true %>
							<%= f.label :is_active, "販売" %>
						</span>
						<span class="col-xs-4">
							<%= f.radio_button :is_active, false, checked: false %>
							<%= f.label :is_active, "販売停止" %>
						</span>
						<span class="col-xs-5">
				    <% else %>
						<span class="col-xs-3">
							<%= f.radio_button :is_active, true , checked: false %>
							<%= f.label :is_active, "販売" %>
						</span>
						<span class="col-xs-4">
							<%= f.radio_button :is_active, true, checked: true %>
							<%= f.label :is_active, "販売停止" %>
						</span>
					<% end %>
					<span><%= f.submit "更新", class: "btn btn-success" %></span>
				<% end %>
			</div>
		</div>
	</div>
</div>

<div class = "guide-tour-body-wrapper">
	<div class = "container">
		<% if @tour.is_active == false %>
			<span class = "admin_tour_is_active_false">
				<h1 class = "admin_tour_is_active_false_text">販売停止中</h1>
			</span>
		<% end %>

	<!------- ツアー内容説明 -------->
		<div class = "row">
			<div class = "guide-tour-details">
				<div class = "col-xs-4">
					<div class = "guide-body-title">
						<h2>ツアー内容</h2>
					</div>
				</div>
				<div class = "col-xs-8">
					<h4 class = "guide-body-text"><%= @tour.body %></h4>
				</div>
			</div>
		</div>
	<!------- ツアー内容説明 -------->


	<!------- ツアーガイド紹介 -------->
		<div class = "row">
			<div class = "guide-tour-details">
				<div class = "col-xs-4">
					<div class = "guide-body-title">
						<h2>ガイド紹介</h2>
						<div class = "guide-tour-guide-introduction">
							<%= attachment_image_tag @tour.guide, :selfy_image, :fill, 100, 100, format: 'jpeg' %>
							<h4><strong><%= @tour.guide.family_name %> <%= @tour.guide.name %></strong></h4>
						</div>
					</div>
				</div>
				<div class = "col-xs-8">
					<div class = "tour-body-wrapper">
						<h4 class = "guide-body-text"><%= @tour.guide.introduction %></h4>
					</div>
				</div>
			</div>
		</div>
	<!------- ツアーガイド紹介 -------->

	<!----------- 集合場所 ------------>
		<div class = "row">
			<div class = "guide-tour-details">
				<div class = "col-xs-4">
					<div class = "guide-body-title">
						<h2>集合場所</h2>
					</div>
				</div>
				<div class = "col-xs-8">
					<div class = "tour-body-wrapper">
						<h4 class = "guide-body-text">
							<%= @tour.meetingpoint_address %><br/>
							<%= @tour.meetingpoint_introduction %>
						</h4>

					<!----- GoogleMap ----->
						<div id="map"></div>
						<style>
						    #map {
						    height: 500px;
						    width: 70%;
						  }
						</style>
						<script>
						  function initMap() {
						    var uluru = {lat: <%= @tour.latitude %>, lng: <%= @tour.longitude %>};
						    var map = new google.maps.Map(document.getElementById('map'), {
						      zoom: 16,
						      center: uluru
						    });
						    var marker = new google.maps.Marker({
						      position: uluru,
						      map: map
						    });
						  }
						</script>
						<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLEMAP'] %>&callback=initMap"
						async defer></script>
						</body>
					<!----- GoogleMap ----->

					</div>
				</div>
			</div>
		</div>
	<!----------- 集合場所 ------------>


	<!----------- レビュー一覧 ------------>
		<div class = "row">
			<div class = "guide-tour-details">
				<div class = "col-xs-4">
					<div class = "guide-body-title">
						<h2>レビュー一覧</h2>
					</div>
				</div>
				<div class = "col-xs-8">
					<div class = "tour-body-wrapper">
						<% if @comments.count == 0 %>
							<% if tourist_signed_in? %>
								<h3>予約して最初のレビュー投稿者になりましょう！</h3>
							<% else %>
								<h3>まだレビューはありません。</h3>
							<% end %>
						<% else %>
							<% @comments.each do |comment| %>
								<div class = "review-message-box">
									<h5>
										<%= comment.tourist.family_name %> <%= comment.tourist.name %>さん
										: <%= comment.created_at.to_s(:datetime_jp) %>
										<span>
											<% if admin_signed_in? %>
												<%= link_to "削除する", admin_comment_path(comment), method: :delete,  class: "btn btn-danger", data: {confirm:'このレビューコメントは不適切な内容を含んでいますか？本当に削除してよろしいですか？。'} %>
											<% end %>
										</span>
									</h5>
									<h4 class = "guide-body-text">
										<%= comment.content %>
									</h4>
								</div>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	<!----------- レビュー一覧 ------------>

	</div>
</div>