<div class = "container">
	<div class = "row">

		<%= render 'admin/genres/errors', genre: @genre %>

	<!----- ジャンル新規登録 ----->
		<div class = "col-xs-2 col-xs-offset-1">
			<div class = "form">
				<h3>ジャンル登録</h3>
				<%= form_for(@genre, url: admin_genres_path) do |f| %>
					<div class = "form_field">
			            <%= f.label :ジャンル名 %><br/>
			            <%= f.text_field :name %>
		        	</div>
		        	<div class = "form_field">
			        	<%= f.submit  "追加", class: "btn btn-success" %>
			        </div>
				<% end %>
			</div>
		</div>
	<!----- ジャンル新規登録 ----->


	<!----- ジャンル一覧 ----->
		<div class = "col-xs-6 col-xs-offset-1">
			<h3 class = "flash"><%=flash[:notice]%></h3>
			<h2>ジャンル一覧</h2>
			<table class = "table">
				<thead>
					<th>ジャンル名</th>
					<th></th>
					<th></th>
				</thead>
				<% @genres.each do |genre| %>
					<tbody>
						<td><%= genre.name %></td>
						<td><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
						<td>
							<%= link_to "削除", admin_genre_path(genre), method: :delete,data: {confirm:'削除してもよろしいですか？'}, class: "btn btn-danger" %>
						</td>
					</tbody>
				<% end %>
			</table>
		</div>
	<!----- ジャンル一覧 ----->

	</div>
</div>