<h2>ツアーガイド登録画面</h2>
<div class = "container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


<!---- 姓、名、国籍、身分証明書 ----->
    <div class = "row">
      <div class = "col-xs-3">
        <%= f.label :姓 %>
        <%= f.text_field :family_name %><br/>
        <%= f.label :名 %>
        <%= f.text_field :name %>
      </div>
      <div class = "col-xs-3">
         <%= f.label :国籍 %>
         <%= f.text_field :nationality %><br/>
      </div>
      <div class = "col-xs-3">
        <%= f.label :身分証明書 %><br/>
        <%= f.attachment_field :identification_image %>
      </div>
    </div>
<!---- 姓、名、国籍、身分証明書 ----->


<!---- 郵便番号、住所 ----->
    <div class = "row">
      <div class = "col-xs-3">
         <%= f.label :郵便番号 %><br/>
         <%= f.text_field :postal_code %>
      </div>
      <div class = "col-xs-3">
         <%= f.label :住所 %><br/>
         <%= f.text_field :address %>
      </div>
      <div class = "col-xs-3">
         <%= f.label :あなたが写っている写真 %><br/>
         <%= f.attachment_field :selfy_image %>
      </div>
    </div>
<!---- 郵便番号、住所 ----->



<!---- 電話番号、メアド ---->
      <div class = "row">
        <div class = "col-xs-3">
          <%= f.label :電話番号 %><br/>
          <%= f.text_field :phone_number %>
        </div>
        <div class = "col-xs-3">
          <%= f.label :メールアドレス %><br/>
          <%= f.text_field :email %>
        </div>
      </div>
<!---- 電話番号、メアド ---->


<!---- 自己紹介 ----->
      <div class = "row">
        <div class = "col-xs-7">
          <%= f.label :自己紹介 %>(250文字以内)<br/>
          <%= f.text_area :introduction, class: "guide-introduction-area" %>
        </div>
      </div>
<!---- 自己紹介 ----->

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-default" %>
    </div>
  <% end %>


  <%= render "guides/shared/links" %>
</div>





