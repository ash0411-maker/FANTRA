<div class = "container">
  <div class = "row">
    <div class = "col-xs-10">
      <h1>新規登録画面</h1>
      <div class = "tourist-registration-warning">
        <h2>※全て入力必須です</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <table class = "table table-bordered">

          <!-- 氏名 -->
            <tr class = "text-center">
              <td class = "active">お名前・国籍</td>
              <td>
                <%= f.label :姓 %><br/><%= f.text_field :family_name %>
              </td>
              <td>
                <%= f.label :名 %><br/><%= f.text_field :name %>
              </td>
              <td>
                <%= f.label :性別 %><br/><%= f.select :sex,[["女性", "女性"], ["男性", "男性"]], :prompt => "--性別--"  %>
              </td>
            </tr>
          <!-- 氏名 -->


          <!-- 住所 -->
            <tr class = "text-center">
              <td class = "active">生まれ年・国籍・電話番号</td>
              <td>
                <%= f.label :生まれ年 %>(西暦)<br/><%= f.text_field :birth_year %>年
              </td>
              <td>
                <%= f.label :国籍 %><br/><%= f.text_field :nationality %>
              </td>
              <td>
                <%= f.label :電話番号 %><br/><%= f.text_field :phone_number %>
              </td>
            </tr>
          <!-- 住所 -->


          <!-- 電話番号、メアド -->
            <tr class = "text-center">
              <td class = "active">メールアドレス・パスワード</td>
              <td>
                <%= f.label :メールアドレス %><br/><%= f.text_field :email %>
              </td>
              <td>
                <%= f.label :パスワード %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
              <td>
                <%= f.label :パスワード確認 %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </td>
            </tr>
          <!-- 電話番号、メアド -->

          </table>
          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
        <%= render "tourists/shared/links" %>
    </div>
  </div>
</div>